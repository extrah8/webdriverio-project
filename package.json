    "@types/node": "^22.13.14",
    "@wdio/allure-reporter": "^9.12.2",
    "@wdio/cli": "^9.12.2",
    "@wdio/junit-reporter": "^9.12.3",
    "@wdio/local-runner": "^9.12.2",
    "@wdio/mocha-framework": "^9.12.2",
